<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Category3">

    <Button
        android:id="@+id/CholeMasalaBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="loadCholeMasala"
        android:text="Chole Masala"
        app:backgroundTint="#5D96DD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.245" />

    <Button
        android:id="@+id/ReturnToRecipes3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="returnToRecipes"
        android:text="Back"
        app:backgroundTint="#5D96DD"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <Button
        android:id="@+id/PaneerButterMasalaBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="loadPaneerButterMasala"
        android:text="Paneer Butter Masala"
        app:backgroundTint="#5D96DD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.392" />

    <Button
        android:id="@+id/BroadBeansCurryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="broadBeansCurry"
        android:text="Broad Beans Curry"
        app:backgroundTint="#5D96DD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <Button
        android:id="@+id/CabbageDalCurryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="loadCabbageDalCurry"
        android:text="Cabbage Dal Curry"
        app:backgroundTint="#5D96DD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.622" />

    <Button
        android:id="@+id/BellPepperCarrotCurryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="loadBellPepperAndCarrotCurry"
        android:text="Bell Pepper and Carrot Curry"
        app:backgroundTint="#5D96DD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.73" />

    <Button
        android:id="@+id/SambarBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="loadSambar"
        android:text="Sambar"
        app:backgroundTint="#5D96DD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.834" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Curries/Soups"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/CholeMasalaBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.626" />
</androidx.constraintlayout.widget.ConstraintLayout>